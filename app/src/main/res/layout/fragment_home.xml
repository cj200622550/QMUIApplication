<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:background="?app_primary_color">

    <android.support.v4.view.ViewPager
        n1:id="@+id/pager"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:layout_marginBottom="@dimen/home_tab_height"
        n1:background="?app_content_bg_color" />

    <com.qmuiteam.qmui.widget.QMUITabSegment xmlns:n2="http://schemas.android.com/apk/res-auto"
        n1:id="@+id/tabs"
        n1:layout_width="fill_parent"
        n1:layout_height="@dimen/home_tab_height"
        n1:layout_gravity="bottom"
        n1:background="?qmui_list_item_bg_with_border_top"
        n1:textSize="12.0sp"
        n2:qmui_tab_icon_position="top" />
</FrameLayout>