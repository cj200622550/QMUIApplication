<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:background="?app_primary_color"
    n1:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar
        n1:id="@+id/topbar"
        n1:layout_width="fill_parent"
        n1:layout_height="?qmui_topbar_height" />

    <com.qmuiteam.qmui.widget.QMUITabSegment
        n1:id="@+id/tabSegment"
        n1:layout_width="fill_parent"
        n1:layout_height="40.0dip"
        n1:background="@drawable/tab_panel_bg" />

    <android.support.v4.view.ViewPager
        n1:id="@+id/contentViewPager"
        n1:layout_width="fill_parent"
        n1:layout_height="0.0dip"
        n1:layout_weight="1.0"
        n1:background="@color/qmui_config_color_white" />
</LinearLayout>